{
    "Angular Switch": {
        "prefix": "ng-switch",
        "description": "Switch template",
        "types": "typescript, html",
        "body": [
            "<span [ngSwitch]=\"${1:expression}\">",
            "<p *ngSwitchCase=\"true\">",
            "",
            "</p>",
            "<p *ngSwitchCase=\"false\">",
            "",
            "</p>",
            "<p *ngSwitchDefault>",
            "",
            "</p>",
            "</span>"
        ]
    }
}