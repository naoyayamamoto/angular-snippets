{
    "Angular If Directive": {
        "prefix": "ng-if",
        "description": "If directive: *ngIf=\"expression\"",
        "types": "typescript, html",
        "body": [
            "*ngIf=\"${1:expression}\""
        ]
    },
    "Angular If Else Directive": {
        "prefix": "ng-if-else",
        "description": "v4: If else directive: *ngIf=\"expression; else\"",
        "types": "typescript, html",
        "body": [
            "<ng-container *ngIf=\"${1:expression}; else ${2:elseTemplate}\">",
            "\t$3",
            "</ng-container>",
            "<ng-template #${2:elseTemplate}>",
            "\t$4",
            "</ng-template>",
            "$0"
        ]
    },
    "Angular If Then Else Directive": {
        "prefix": "ng-if-then-else",
        "description": "v4: If then else directive: *ngIf=\"expression; then; else\"",
        "types": "typescript, html",
        "body": [
            "<ng-container *ngIf=\"${1:expression}; then ${2:thenTemplate}; else ${3:elseTemplate}\"></ng-container>",
            "<ng-template #${2:thenTemplate}>",
            "\t$4",
            "</ng-template>",
            "<ng-template #${3:elseTemplate}>",
            "\t$5",
            "</ng-template>",
            "$0"
        ]
    }
}