{
    "Material FA Icon": {
        "prefix": "m-icon-fontawesome",
        "description": "Material Font Awesome Icon",
        "types": "typescript, html",
        "body": [
            "<mat-icon mat-font-icon=\"fa-${1:icon}\" class=\"fa\"></mat-icon>$0"
        ]
    },
    "Material SVG Icon": {
        "prefix": "m-icon-svg",
        "description": "Material SVG Icon",
        "types": "typescript, html",
        "body": [
            "<mat-icon svgIcon=\"${1:src}\"></mat-icon>$0"
        ]
    },
    "Material Icon": {
        "prefix": "m-icon",
        "description": "Material Icon",
        "types": "typescript, html",
        "body": [
            "<mat-icon>${1:icon}</mat-icon>$0"
        ]
    },
    "Material Icon with Badge": {
        "prefix": "m-icon-badge",
        "description": "Material Icon with a Badge",
        "types": "typescript, html",
        "body": [
            "<mat-icon",
            "\tcolor=\"primary\"",
            "\tmatBadge=\"${1:number}\"",
            "\tmatBadgePosition=\"${2:above,below} ${3:after,before}\"",
            "\tmatBadgeColor=\"accent\">",
            "\t\t${4:icon}",
            "</mat-icon>$0"
        ]
    }
}